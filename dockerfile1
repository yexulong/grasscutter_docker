FROM python:3.8

RUN curl -O https://snapshots.mitmproxy.org/8.0.0/mitmproxy-8.0.0-linux.tar.gz \
    && tar zxvf mitmproxy-8.0.0-linux.tar.gz \
    && mv mitmdump /opt \
    && mv mitmproxy /opt \
    && mv mitmweb /opt \
    && rm -rf mitmproxy-8.0.0-linux.tar.gz
WORKDIR /opt/grasscutter
VOLUME /opt/grasscutter
